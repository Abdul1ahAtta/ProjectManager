@model IEnumerable<ProjectManager.Models.Project>

@{
    ViewData["Title"] = "Projektlista";
}

<h2>@ViewData["Title"]</h2>

<form method="get" class="mb-3">
    <label for="status">Filtrera efter status:</label>
    <select name="status" id="status" onchange="this.form.submit()">
        <option value="">Alla</option>
        <option value="Startad">Startade</option>
        <option value="Slutförd">Slutförda</option>
    </select>
</form>

<a asp-action="Create" class="btn btn-success mb-3">+ Nytt Projekt</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Titel</th>
            <th>Beskrivning</th>
            <th>Skapad</th>
            <th>Status</th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Titel</td>
            <td>@item.Beskrivning</td>
            <td>@item.SkapadDatum.ToShortDateString()</td>
            <td>@item.Status</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Redigera</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Är du säker på att du vill ta bort projektet?');">
                    <button type="submit" class="btn btn-sm btn-danger">Ta bort</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
